@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome-sprockets";
@import "font-awesome";
@import "variables";
@import "mixins";


//global
*{
  @include transition-all;
  @include helvetica-neue;
}
h1,
h2,
h3,
h4,
h5,
h6 {
}
hr.small {
  max-width: 150px;
  margin: 15px auto;
  border-width: 2px;
  border-color: white;
}
.navbar {
  z-index: 3;
  margin-bottom: 0;
  background-color: white !important;
}
/* header */
.navbar-brand-centered
{
  position: absolute;
  left: 50%;
  width: 160px;
  text-align: center;
  background-color: transparent;
}
.navbar>.container .navbar-brand-centered, 
.navbar>.container-fluid .navbar-brand-centered {
  margin-left: -80px;
}

.navbar-custom {
  background-color: transparent;
}


@media only screen and (min-width: 768px) {
  .navbar-nav-to-left {
    position: absolute;
    left: 200px;
    width: 180px;
    text-align: center;

  }
  .navbar-nav-to-right {
    position: absolute;
    right: 200px;
    width: 180px;
    text-align: center;

  }
  .nav-item {
    width: 50%;
    text-align: center;
  }
}

// Header

.intro-header {
  background-image: url(<%= asset_path 'main-me.jpg' %>) !important;
  background-color: $gray; 
  background: no-repeat center center; 
  background-attachment: scroll;
  @include background-cover;
  // NOTE: Background images are set within the HTML using inline CSS!
  margin-bottom: 50px;
  .site-heading,
  .post-heading,
  .page-heading {
    padding: 100px 0 50px;
    color: white;
    @media only screen and (min-width: 768px) {
      padding: 150px 0;
    }
  }
  .site-heading,
  .page-heading {
    text-align: center;
    h1 {
      margin-top: 0;
      font-size: 50px;
    }
    .subheading {
      font-size: 24px;
      line-height: 1.1;
      display: block;
      font-weight: 300;
      margin: 10px 0 0;
    }
    @media only screen and (min-width: 768px) {
      h1 {
        font-size: 80px;
      }
    }
  }
  .post-heading {
    h1 {
      font-size: 35px;
    }
    .subheading,
    .meta {
      line-height: 1.1;
      display: block;
    }
    .subheading {
      font-size: 24px;
      margin: 10px 0 30px;
      font-weight: 600;
    }
    .meta {
      font-style: italic;
      font-weight: 300;
      font-size: 20px;
      a {
        color: white;
      }
    }
    @media only screen and (min-width: 768px) {
      h1 {
        font-size: 55px;
      }
      .subheading {
        font-size: 30px;
      }
    }
  }
}


/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid #eaeaea;
  color: #777;
}

footer a {
  color: #555;
}

footer a:hover {
  color: #222;
}

footer small {
  float: left;
}

footer ul {
  float: right;
  list-style: none;
}

footer ul li {
  float: left;
  margin-left: 15px;
}