<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :email %><br>
    <%= f.email_field :email, :class => "form-control" %>
  </div>
  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :phone %><br>
    <%= f.phone_field :phone, :class => "form-control" %>
  </div>
  <div class="form-group col-xs-12 floating-label-form-group controls">
    <%= f.label :message %><br>
    <%= f.cktext_area :message, :class => "form-control", :rows=>"8" %>
  </div>
  <div class="form-group col-md-2 col-sm-3 floating-label-form-group controls pull-right">
    <%= f.button :Create, :class => "form-control btn btn-success "%>
  </div>
  <div class="form-group col-md-2 col-sm-3 floating-label-form-group controls pull-right">
    <%= link_to 'Back', "history.back()", {class: 'form-control btn btn-primary'} %>
  </div>
<% end %>
